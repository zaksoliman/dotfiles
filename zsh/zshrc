prompt_dir() {
        prompt_segment blue $CURRENT_FG '%c'
}

prompt_context() {
  # Custom (Random emoji)
  emojis=("‚ö°Ô∏è" "üî•" "üíÄ" "üëë" "üòé" "üê∏" "üêµ"  "üöÄ" "üí°" "üéâ" "üîë" "üö¶" "üåô")
  RAND_EMOJI_N=$(( $RANDOM % ${#emojis[@]} + 1))
  prompt_segment black default "${emojis[$RAND_EMOJI_N]} "
}


